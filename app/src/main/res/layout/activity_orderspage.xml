<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OrdersPage"
    tools:ignore="HardcodedText">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/cardview_default_elevation"
        android:background="@color/white">


        <ImageView
            android:id="@+id/imageAcc"
            android:layout_width="56dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/contact" />

        <ImageView
            android:id="@+id/imageMeal"
            android:layout_width="119dp"
            android:layout_height="143dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="164dp"
            app:srcCompat="@drawable/fast_food" />

        <TextView
            android:id="@+id/textMealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="151dp"
            android:layout_marginTop="153dp"
            android:text="Meal Name"
            android:textColor="#3F51B5"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="187dp"
            android:layout_marginBottom="238dp"
            android:text="Description of meal"
            android:textColor="#3F51B5"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="173dp"
            android:text="Price"
            android:textColor="#3F51B5"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="156dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#3F51B5"
            android:text="CHECKOUT"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textOrderspage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="194dp"
            android:fontFamily="sans-serif-black"
            android:text="Orders Page"
            android:textColor="#3949AB"
            android:textSize="20dp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#3949AB"
        app:insetForeground="@color/purple_500"
        app:itemIconTint="#3949AB"
        app:itemShapeFillColor="#3949AB"
        app:menu="@menu/navigate_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
