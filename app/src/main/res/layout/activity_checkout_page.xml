<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    android:paddingBottom="30dp"
    android:paddingHorizontal="10dp"
    tools:context=".views.nonCart.CheckoutPage"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
            android:id="@+id/forget_password_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/cput_logo" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
       android:gravity="center"
                android:background="#d8d8d8"
     android:layout_marginVertical="20dp">
    <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Amount To Pay:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="R200"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"

            />
</LinearLayout>

                <EditText
              android:id="@+id/card_number"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:ems="10"
                        android:hint="Card Number"
        android:gravity="start|top"

                    android:inputType="number"
                    android:maxLength="16"
        android:minHeight="48dp"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"
                app:startIconDrawable="@drawable/card"
                app:startIconTint="@color/blue"
        tools:ignore="SpeakableTextPresentCheck" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                                <EditText
                            android:id="@+id/expiration_date"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:ems="10"

                android:hint="Expiration Date"
        android:gravity="start|top"
                                    android:inputType="number"
                                    android:maxLength="4"
        android:minHeight="48dp"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"

                app:startIconDrawable="@drawable/expiration_date"
                app:startIconTint="@color/blue"
        tools:ignore="SpeakableTextPresentCheck" />

                                               <EditText
                            android:id="@+id/cvv"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:ems="10"

                 android:hint="CVV"
        android:gravity="start|top"
        android:inputType="number"
        android:minHeight="48dp"
                                                   android:maxLength="3"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"

        tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

             <EditText
              android:id="@+id/postal_code"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:ems="10"
           android:hint="Postal Code"
        android:gravity="start|top"
                 android:inputType="number"
                 android:maxLength="4"
        android:minHeight="48dp"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"
                       app:startIconDrawable="@drawable/postal_code"
                app:startIconTint="@color/blue"
        tools:ignore="SpeakableTextPresentCheck" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                           <EditText
                       android:id="@+id/country_code"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:ems="10"
                        android:hint="Country Code"
        android:gravity="start|top"
                               android:inputType="number"
                               android:maxLength="2"
        android:minHeight="48dp"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"
          app:startIconDrawable="@drawable/phone"
                app:startIconTint="@color/blue"
        tools:ignore="SpeakableTextPresentCheck" />

   <EditText
                                     android:id="@+id/mobile_number"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:ems="10"
                       android:hint="Mobile Number"
        android:gravity="start|top"
       android:inputType="number"
       android:maxLength="10"
        android:minHeight="48dp"
     app:endIconTint="@color/blue"
                app:hintTextColor="@color/blue"

        tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>




            <Button
                android:id="@+id/pay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:onClick=""
                android:text="Make Payment"
                android:textColor="@color/white"
                tools:ignore="OnClick" />


        </LinearLayout>

    </ScrollView>
