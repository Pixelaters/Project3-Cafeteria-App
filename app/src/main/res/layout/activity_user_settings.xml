<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UserSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:transitionName="transition_login"
    tools:context=".views.nonCart.UserSettings" >

    <ProgressBar
        android:id="@+id/progressBar600"
        style="?android:attr/progressBarStyle"
        android:layout_width="106dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="344dp"
        android:layout_weight="1"
        android:visibility="gone" />


    <Button
        android:id="@+id/deleteAccount"
        android:layout_width="368dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:text="Delete Account" />

    <Button
        android:id="@+id/detailsUpdate"
        android:layout_width="368dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="157dp"
        android:text="Save Changes" />

    <Button
        android:id="@+id/passwordChange"
        android:layout_width="338dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="267dp"
        android:text="Update Password" />

    <EditText
        android:id="@+id/nameUpdate"
        android:layout_width="332dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="418dp"
        android:hint="Please enter your username" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="357dp"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="619dp"
        android:text="Account settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:textAllCaps="true" />

</RelativeLayout>